mixin ChatForm()


  head
    meta(charset='utf-8')
    title WebScockets 101
    script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.js')
    link(href='/styles.css', rel='stylesheet')
  body
    div mario-chat
      h2 Mario Chat
      div chat-window
        div output
        div feedback
      input#handle(type='text', placeholder='Handle')
      input#message(type='text', placeholder='Message')
      button#send Send
    script(src='/chat.js')